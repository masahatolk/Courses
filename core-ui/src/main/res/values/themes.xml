<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Courses" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/background_gray</item>

        <item name="colorSecondary">@color/text_white</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:windowBackground">@color/background_dark</item>

        <!-- Настройка текста -->
        <item name="android:textColor">@color/text_white</item>
    </style>

    <!-- Настройка текста -->
    <style name="TextTitleHeader">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextRegular">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Настройка полей ввода -->
    <style name="TextInput" parent="Widget.AppCompat.EditText">

        <item name="android:textColorHint">@color/text_gray</item>
        <item name="android:textColor">@color/text_white</item>

        <item name="android:gravity">center_vertical</item>

        <item name="android:background">@drawable/input_rounded</item>

        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>

        <!-- фон заливки -->
        <item name="android:backgroundTint">@color/background_gray</item>
    </style>

    <style name="ButtonGreen" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/button_green</item>

        <item name="android:textColor">@color/text_white</item>

        <item name="android:textSize">18sp</item>

        <item name="android:fontFamily">sans-serif-medium</item>

        <item name="textAllCaps">false</item>

    </style>
</resources>